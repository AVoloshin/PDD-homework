CREATE DATABASE /*!32312 IF NOT EXISTS*/`forum` /*!40100 DEFAULT CHARACTER SET utf8 COLLATE utf8_bin */;

USE `forum`;

/*Table structure for table `posts` */

DROP TABLE IF EXISTS `posts`;

CREATE TABLE `posts` (
  `id_post` int(10) unsigned NOT NULL AUTO_INCREMENT,
  `post_author` varchar(20) COLLATE utf8_bin NOT NULL,
  `post_date` datetime NOT NULL,
  `post_message` longtext COLLATE utf8_bin NOT NULL,
  `post_topic` varchar(100) COLLATE utf8_bin NOT NULL,
  PRIMARY KEY (`id_post`)
) ENGINE=InnoDB AUTO_INCREMENT=6 DEFAULT CHARSET=utf8 COLLATE=utf8_bin;

