insert  into `topics`(`id_topic`,`topic_name`,`topic_starter`,`topic_startdate`,`topic_startmessage`,`topic_status`) values (1,'Тестовая тема 1',1,'2014-07-15 00:33:15','','active'),(2,'Тестовая тема 2',2,'2014-07-15 10:26:27','','active');

/*Table structure for table `user_data` */

DROP TABLE IF EXISTS `user_data`;

CREATE TABLE `user_data` (
  `id_user` int(10) unsigned NOT NULL AUTO_INCREMENT,
  `user_name` varchar(20) COLLATE utf8_bin NOT NULL,
  `user_login` varchar(20) COLLATE utf8_bin NOT NULL,
  `user_password` text COLLATE utf8_bin NOT NULL,
  `user_email` varchar(50) COLLATE utf8_bin NOT NULL,
  `user_regdate` date NOT NULL,
  UNIQUE KEY `id_user` (`id_user`)
) ENGINE=InnoDB AUTO_INCREMENT=4 DEFAULT CHARSET=utf8 COLLATE=utf8_bin;

